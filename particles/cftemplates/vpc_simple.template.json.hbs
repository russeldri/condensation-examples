---
subnets:
  - 1
  - 2
---
{
  "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
      {{{partial 'module:particles-common-core' 'parameter_cidr_range' name="VpcCidr" default="10.0.0.0/16"}}},
      {{{partial 'module:particles-common-core' 'parameter_cidr_range' name="Subnet1Cidr" default="10.0.0.0/24"}}},
      {{{partial 'module:particles-common-core' 'parameter_cidr_range' name="Subnet2Cidr" default="10.0.1.0/24"}}},
      {{{partial 'module:particles-common-core' 'parameter_tf' name="CreateVpcSecurityGroup" default="true"}}},
      {{{partial 'module:particles-common-core' 'parameter_tf' name="CreateInternetGateway" default="true"}}},
      {{{partial 'module:particles-common-core' 'parameter_tf' name="OpenVpcCommunication" default="true"}}},
      "Subnet1AvailabilityZone": {
        "Description": "Availability Zone",
        "Type": "String",
        "Default": "auto",
        "ConstraintDescription": "Must be a valid AZ for the region or 'auto'."
      },
      "Subnet2AvailabilityZone": {
        "Description": "Availability Zone",
        "Type": "String",
        "Default": "auto",
        "ConstraintDescription": "Must be a valid AZ for the region or 'auto'."
      },
      "NameTag": {
        "Description": "Will set the name tag for all created resources.",
        "Type": "String"
      }
    },
    "Conditions": {
      "Subnet1AutoSelection": {"Fn::Equals": [{"Ref": "Subnet1AvailabilityZone"}, "auto"]},
      "Subnet2AutoSelection": {"Fn::Equals": [{"Ref": "Subnet2AvailabilityZone"}, "auto"]}
    },
    "Resources": {
      "Vpc": {
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "Parameters": {
            "VpcCidr": {
              "Ref": "VpcCidr"
            },
            "CreateVpcSecurityGroup": {"Ref": "CreateVpcSecurityGroup"},
            "CreateInternetGateway": {"Ref": "CreateVpcSecurityGroup"},
            "OpenVpcCommunication": {"Ref": "CreateVpcSecurityGroup"},
            "NameTag": {
              "Ref": "NameTag"
            }
          },
          "TemplateURL": "{{{templateS3Url 'module:particles-vpc' 'vpc.template.json'}}}"
        }
      },
      {{#each subnets}}
      "Subnet{{this}}": {
        "Type": "AWS::CloudFormation::Stack",
        "Properties": {
          "Parameters": {
          "SubnetCidr": {"Ref": "Subnet{{this}}Cidr"},
            "AvailabilityZone": {
              "Fn::If": [
              "Subnet{{this}}AutoSelection",
                {"Fn::Select": ["0",{"Fn::GetAZs" : "" }]},
                {"Ref": "Subnet{{this}}AvailabilityZone"}
              ]
            },
            "VpcId": { "Fn::GetAtt": [ "Vpc", "Outputs.VpcId" ] },
            "RouteTableId": {
              "Fn::GetAtt": [
                "Vpc",
                "Outputs.RouteTableId"
              ]
            },
            "NameTag": { "Ref": "NameTag" }
          },
          "TemplateURL": "{{{templateS3Url 'module:particles-vpc' 'subnet.template.json'}}}"
        },
        "DependsOn": "Vpc"
      }
      {{#if @last}}{{else}},{{/if}}
      {{/each}}
    },
    "Outputs": {
      "Subnet1Id" : {
        "Value" : {"Fn::GetAtt": ["Subnet1","Outputs.SubnetId"]},
        "Description" : "Subnet 1"
      },
      "Subnet2Id" : {
        "Value" : {"Fn::GetAtt": ["Subnet2","Outputs.SubnetId"]},
        "Description" : "Subnet 2"
      },
      "VpcId" : {
        "Value" : {"Fn::GetAtt": ["Vpc","Outputs.VpcId"]},
        "Description" : "VPC ID"
      },
      "Subnet1AZ": {
        "Value": {
          "Fn::If": [
            "Subnet1AutoSelection",
          {"Fn::Select": ["0",{"Fn::GetAZs" : "" }]},
          {"Ref": "Subnet1AvailabilityZone"}
          ]
        }
      },
      "Subnet2AZ": {
        "Value": {
          "Fn::If": [
            "Subnet2AutoSelection",
          {"Fn::Select": ["1",{"Fn::GetAZs" : "" }]},
          {"Ref": "Subnet2AvailabilityZone"}
          ]
        }
      },
      "InfraSecurityGroupId": {
        "Value" : {"Fn::GetAtt": ["Vpc", "Outputs.SecurityGroupId"] },
        "Description" : "Infra Security Group"
      }
    }

}
