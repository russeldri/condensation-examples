
  {{set 'layouts/rds/shared_params'}}

  {{
    parameter "module:particles-common-core" "base"
    logicalId="AllocatedStorage"
    type="String"
    default="5"
    description="Storage to allocate to for the database in GB"
  }}

  {{
    parameter "module:particles-common-core" "base"
    logicalId="DBSnapshotIdentifier"
    type="String"
    default=""
    description="If set, the RDS R/W database will be initialized from the identified snapshot.  Leave blank to create a fresh DB."
  }}
  {{condition "module:particles-common-core" 'is_empty' logicalId="DBSnapshotIdentifierIsEmpty" parameterLogicalId="DBSnapshotIdentifier"}}

  {{
    parameter "module:particles-common-core" "base"
    logicalId="DBName"
    type="String"
    default="condensation"
    description="Will be ignored if DBSnapshotIdentifier is given"
  }}

  {{
    parameter "module:particles-common-core" "base"
    logicalId="MasterUsername"
    type="String"
    default="condensation"
  }}

  {{
    parameter "module:particles-common-core" "base"
    logicalId="MasterUserPassword"
    type="String"
    noEcho=true
    default="password"
    description="Default is 'password'"
  }}

  {{
    set "module:particles-common-core" "true_false"
    parameterLogicalId="MultiAZ"
    conditionLogicalId="MultiAZCondition"
    default="true"
  }}



